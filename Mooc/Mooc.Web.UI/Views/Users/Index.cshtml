@model IEnumerable<Mooc.DataAccess.Models.Entities.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.RoleType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddTime)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.PhotoUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.RoleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddTime)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.PhotoUrl)
            </td>
            <td>


                @using (Ajax.BeginForm("Delete/" + item.Id, "Users", new AjaxOptions { Confirm = "are you sure to delete?", HttpMethod = "Post", OnSuccess = "AfterDelete" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(modelItem => item.Id)

                    <input type="submit" value="Delete" class="btn btn-danger " style="display:inline" />

                   // @Html.ActionLink("Update111", "Update", new { id = item.Id, @class = "btn btn-primary btn-large" })
                    @Html.ActionLink("Update", "Update/"+item.Id, "Users", null, new {  @class = "btn btn-primary " })

                }


            </td>
        </tr>
    }

</table>
