<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FontAwesome Styles-->
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- Morris Chart Styles-->
    <!-- Custom Styles-->
    <link href="~/assets/css/custom-styles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/angular1.7/angular.js"></script>
    <script src="~/Scripts/angular1.7/angular-cookies.js"></script>
    @RenderSection("head", required: false)
</head>

<body>
    <div id="wrapper" >
        <nav class="navbar navbar-default top-navbar" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html"><i class="fa fa-comments"></i> <strong>MASTER </strong></a>
            </div>

            <ul class="nav navbar-top-links navbar-right" id="ulLogout">

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Content("~/MoocAdmin/Admin/Logout")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>

            </ul>
        </nav>
        <!--/. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation"  >
            <div class="sidebar-collapse">
                <ul class="nav " id="main-menu">

                    <li>
                        <a id="Users" href="@Url.Content("~/MoocAdmin/Users")" class="active-menu"><i class="fa fa-dashboard "></i> 用户列表</a>
                    </li>
                    <li>
                        <a id="Teacher" href="@Url.Content("~/MoocAdmin/Teacher")"><i class="fa fa-desktop"></i> 讲师列表</a>
                    </li>

                    <li>
                        <a id="Subject" href="@Url.Content("~/MoocAdmin/Subject")"><i class="fa fa-qrcode"></i> 课程列表</a>
                    </li>

                    <li>
                        <a id="SubjectCategory" href="@Url.Content("~/MoocAdmin/SubjectCategory")"><i class="fa fa-table"></i> 课程类别列表</a>
                    </li>

                    <li>
                        <a id="OpenCourse" href="@Url.Content("~/MoocAdmin/OpenCourse")"><i class="fa fa-bars"></i> 已开课列表</a>
                    </li>

                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">

            @RenderBody()
        </div>

    </div>

    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            var location = window.location.href;
            var id = location.substring(location.lastIndexOf('/') + 1);
            $("#Users").removeClass("active-menu");
            $("#" + id).addClass("active-menu");
        });
    </script>

</body>


</html>


