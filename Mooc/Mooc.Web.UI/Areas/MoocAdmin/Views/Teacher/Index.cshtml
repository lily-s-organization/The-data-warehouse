
<script src="~/Scripts/jqPaginator.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="row" id="dataBind" ng-app="myapp" ng-controller="myCtrl">

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 style="display:inline-block">讲师信息表</h2>
                <a class="btn btn-primary" style="float:right;margin-top:14px;margin-right:16px;" ng-click="addTeacher()" href="#"><i class="fa"></i> 添加讲师</a>
            </div>

            <div class="panel-body">
                <div class="table-responsive table-striped">
                    <table class="table">

                        <thead>
                            <tr>
                                <th>姓名</th>
                                <th>职位</th>
                                <th>部门</th>
                                <th>头像</th>
                                <th>Email</th>
                                <th>个人简介</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="row in list">
                                <td>{{row.TeacherName}}</td>
                                <td>{{row.Level}}</td>
                                <td>{{row.Department}}</td>
                                <td>{{row.PhotoUrl}}</td>
                                <td>{{row.Email}}</td>
                                <td>{{row.Description}}</td>
                                <td><a class="btn btn-primary" ng-click="updateTeacher(row.Id)" href="#"><i class="fa fa-edit"></i>  更新个人信息</a></td>
                                <td><a class="btn btn-danger" ng-click="deleteTeacher(row.Id)" href="#"><i class="fa fa-pencil"></i>  删除讲师</a></td>

                            </tr>
                        </tbody>
                    </table>
                    <div class="col-md-4 col-md-offset-8">
                        <ul class="pagination" id="paginationBtn" style="margin:auto"></ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>



    var app = angular.module("myapp", []);
    app.controller("myCtrl", function ($scope, $http) {

        $scope.pageIndex = 1;
        $scope.pageSize = 10;
        getTeacherList($scope, $http);//载入页面数据

        $scope.updateTeacher = function (id) {
            window.location.href = "@Url.Content("~/MoocAdmin/Teacher/Details/")" + id;
        };

        $scope.deleteTeacher = function (id) {
            $http.post("@Url.Content("~/MoocAdmin/Teacher/Delete/")" + id).then(function (response) {
                if (response.status == 200) {
                    getTeacherList($scope, $http);//刷新页面
                }
            }).catch(function (data) {
                console.log("catch:" + data);
            })
        };

        $scope.addTeacher = function () {
             window.location.href = "@Url.Content("~/MoocAdmin/Teacher/Add/")";
        }
    });




    function getTeacherList($scope, $http) {

        $http.post("@Url.Content("~/MoocAdmin/Teacher/GetTeacherList")", { pageIndex: $scope.pageIndex, pageSize: $scope.pageSize }).then(function (response) {
            if (response.status == 200) {
                $('#paginationBtn').jqPaginator({
                    totalCounts: response.data.iCount,
                    pageSize:$scope.pageSize,
                    visiblePages: 5,
                    currentPage: $scope.pageIndex,

                    first: '<li class="first"><a href="javascript:void(0);">First</a></li>',
                    prev: '<li class="prev"><a href="javascript:void(0);">Previous</a></li>',
                    next: '<li class="next"><a href="javascript:void(0);">Next</a></li>',
                    last: '<li class="last"><a href="javascript:void(0);">Last</a></li>',
                    page: '<li class="page"><a href="javascript:void(0);">{{page}}</a></li>',
                    onPageChange: function (number) {
                        //number为用户点击触发的那个页数
                        $scope.pageIndex = number;
                        if ($('#paginationBtn .active').eq(0).attr('jp-data') !== number.toString()) {
                            getTeacherList($scope, $http);
                        }
                    }
                });
                $scope.list = response.data.data;
            }
        }).catch(function (data) {
            console.log("catch:" + data);
        });
    }

</script>

