@{
    Layout =" ~/Areas/MoocAdmin/Views/Shared/_LayoutLogin.cshtml";
}
<script src="~/assets/js/bootstrap.min.js"></script>
<div  ng-app="myapp" ng-controller="myCtrl" >

    <h2 style="text-align:center">Welcome to Mooc</h2>

    <div class="row">

        <div class="form-group col-md-4 col-md-offset-4" style="text-align:center;" >
            <input class="form-control" placeholder="username" style="margin:10px" ng-model="username"/>
            <input type="password" class="form-control" placeholder="password" style="margin:10px" ng-model="password"/>
            <a class="btn btn-primary" ng-click="login()">Login</a>

        </div>
    </div>

</div>

<script>

    var app = angular.module("myapp", []);
    app.controller("myCtrl", function ($scope, $http, $window) {

        $scope.login = function () {
            login($scope, $http, $window);
        }
    });



    function login($scope, $http, $window) {
        $http.post("@Url.Content("~/MoocAdmin/Admin/Login")", { username: $scope.username, password: $scope.password }).then(function (response) {
            if (response.status == 200 && response.data == 200) {
                window.location.href = "@Url.Content("~/MoocAdmin/Users/Index/")";
            }
            else {
                window.alert("wrong username or password");
            }
        }).catch(function (data) {
            
            console.log("catch:" + data);
        });
    }


</script>
