
<script src="~/Scripts/jqPaginator.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="row" id="dataBind" ng-app="myapp" ng-controller="myCtrl">

    <div class="col-md-12"  style="margin-top:20px">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 style="display:inline-block">已开课课程</h2>
               
            </div>

            <div class="panel-body">
                <div class="table-responsive table-striped">
                    <table class="table">

                        <thead>
                            <tr>
                                <th>课程名字</th>
                                <th>开课日期</th>
                                <th>结课日期</th>
                                <th>课程状态</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="row in list">
                                <td>{{row.SubjectName}}</td>
                                <td>{{row.StartDate}}</td>
                                <td>{{row.CloseDate}}</td>
                                <td>{{row.ShowStatus}}</td>

                                <td><a class="btn btn-danger" ng-click="deleteOpenCourse(row.Id)" href="#"><i class="fa fa-pencil"></i>  删除</a></td>

                            </tr>
                        </tbody>
                    </table>
                    <div style="float:right">
                        <ul class="pagination" id="paginationBtn" style="margin:auto"></ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>



    var app = angular.module("myapp", []);
    app.controller("myCtrl", function ($scope, $http) {

        $scope.pageIndex = 1;
        $scope.pageSize = 10;
        getOpenCourseList($scope, $http);//载入页面数据


        $scope.deleteOpenCourse = function (id) {
            if (confirm("确定删除该条数据?")) {
                 $http.post("@Url.Content("~/MoocAdmin/OpenCourse/Delete/")" + id).then(function (response) {
                     if (response.data.code == 0) {
                         alert("删除成功");
                         getOpenCourseList($scope, $http);//刷新页面
                        
                     } else if (response.data.code == 200) {
                         alert("开课期间不能删除");
                     }
                 }).catch(function (data) {
                     alert("删除失败");
                     console.log("catch:" + data);
            })
            }
        };

        
    });




    function getOpenCourseList($scope, $http) {

        $http.post("@Url.Content("~/MoocAdmin/OpenCourse/GetOpenCourseList")", { pageIndex: $scope.pageIndex, pageSize: $scope.pageSize }).then(function (response) {
            if (response.status == 200) {
                $('#paginationBtn').jqPaginator({
                    totalCounts: response.data.iCount,
                    pageSize:$scope.pageSize,
                    visiblePages: 5,
                    currentPage: $scope.pageIndex,

                    first: '<li class="first"><a href="javascript:void(0);">第一页</a></li>',
                    prev: '<li class="prev"><a href="javascript:void(0);">前一页</a></li>',
                    next: '<li class="next"><a href="javascript:void(0);">后一页</a></li>',
                    last: '<li class="last"><a href="javascript:void(0);">最后一页</a></li>',
                    page: '<li class="page"><a href="javascript:void(0);">{{page}}</a></li>',
                    onPageChange: function (number) {
                        //number为用户点击触发的那个页数
                        $scope.pageIndex = number;
                        if ($('#paginationBtn .active').eq(0).attr('jp-data') !== number.toString()) {
                            getSubjectCategoryList($scope, $http);
                        }
                    }
                });
                console.log(response.data);
                
                $scope.list = response.data.data;
                $scope.list.forEach(function (element) {
                   
                   
                    var msecStr = element.StartDate.toString().replace(/\/Date\(([-]?\d+)\)\//gi, "$1"); // => '1419492640000' ：通过正则替换，获取毫秒字符串
                    var msesInt = Number.parseInt(msecStr);
                  //  element.StartDate = new Date(msesInt).toLocaleString(); 
                    var tmpDate = new Date(msesInt);
                    element.StartDate = format(tmpDate);

                    var msecStr1 = element.CloseDate.toString().replace(/\/Date\(([-]?\d+)\)\//gi, "$1"); 
                    var msesInt1 = Number.parseInt(msecStr1);
                    //element.CloseDate = new Date(msesInt1).toLocaleString(); 
                    var tmpDate1 = new Date(msesInt1);
                    element.CloseDate = format(tmpDate1);
                });


            }
        }).catch(function (data) {
            console.log("catch:" + data);
        });
    }


    function format(Date) {
        var Y = Date.getFullYear();
        var M = Date.getMonth() + 1;
        M = M < 10 ? '0' + M : M;// 不够两位补充0
        var D = Date.getDate();
        D = D < 10 ? '0' + D : D;
        var H = Date.getHours();
        H = H < 10 ? '0' + H : H;
        var Mi = Date.getMinutes();
        Mi = Mi < 10 ? '0' + Mi : Mi;
        var S = Date.getSeconds();
        S = S < 10 ? '0' + S : S;
        return Y + '-' + M + '-' + D + ' ' + H + ':' + Mi + ':' + S;
    }
   
</script>

